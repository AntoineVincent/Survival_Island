{% extends 'base.html.twig' %}

{% block body %}

	<div class="col-md-12">
		<div class="col-md-1"></div>
		<div class="col-md-2 log-col">
			{% if error %}
			    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<div class="col-md-12">
				<h3 class="log-title"> Connexion </h3>
			</div>

			<form action="{{ path("user_login_check") }}" method="post">
				<div class="col-md-12">
			   		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				</div>
				<div class="col-md-12">
			    	<label for="username"><span>Pseudo :</span></label>
			    	<input class="log-input" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
				</div>
				<div class="col-md-12">
			    	<label for="password"><span>Mot de Passe :</span></label>
			    	<input class="log-input" type="password" id="password" name="_password" required="required" />
				</div>
				<div class="col-md-12">
			    	<label for="remember_me"><span>Remember me:</span></label>
			    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
				</div>
				<div class="col-md-12">
					<div class="col-md-12">
						<input type="submit" class="btnlogin" id="_submit" name="_submit" value="Let's go" />
					</div>
				</div>
			</form>
			<a class="btn" href="{{ path('user_register') }}">S'inscrire</a>
		</div>
		<div class="col-md-8 pres-col"></div>
	</div>

{% endblock %} 