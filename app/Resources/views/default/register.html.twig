{% extends 'base.html.twig' %}

{% block body %}

	<div class="col-md-12">
    			<div class="col-md-1"></div>
    			<div class="col-md-10 reg-col">
					{{ form_start(form, {'method': 'post', 'action': path('user_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                		<div class="col-md-12">
                		    <h3 class="register-title"> INSCRIPTION </h3>
                		</div>
                		<div class="col-md-12">
                		    <div class="col-md-6">
                		        <p >Pseudo :</p>
                		    </div>
                		    <div class="col-md-6">
                		        {{ form_widget(form.username) }}
                    		    {{ form_errors(form.username) }}
    		                </div>
    		            </div>
    		    		<div class="col-md-12">
        		        	<div class="col-md-6 ">
            		    	    <p>Adresse E-mail :</p>
            		    	</div>
            		    	<div class="col-md-6">
            			        {{ form_widget(form.email) }}
            			        {{ form_errors(form.email) }}
            		    	</div>
            			</div>

            			<div class="col-md-12">
            			    <div class="col-md-6">
            			        <p>Mot de passe :</p>
            			    </div>
            			    <div class="col-md-6">
            			        {{ form_widget(form.plainPassword.first) }}
            			        {{ form_errors(form.plainPassword.first) }}
            			    </div>
            			</div>

            			<div class="col-md-12">
            			    <div class="col-md-6">
            			        <p>Confirmation :</p>
            			    </div>
            			    <div class="col-md-6">
            			        {{ form_widget(form.plainPassword.second) }}
            			        {{ form_errors(form.plainPassword.second) }}
            			    </div>
            			</div>
            			<div class="col-md-12">
            			    <div class="col-md-4"></div>
            			    <div class="col-md-4 ">
            		        	<input class="btnlogin regbtn" type="submit" value="{{ 'Envoyer'|trans }}" />
            			    </div>
            			    <div class="col-md-4"></div>
            			</div>
        			{{ form_end(form) }}
   				</div>
   				<div class="col-md-1"></div>
	</div>

{% endblock %} 